<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:clickable="false">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ff3d4fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:background="#ff3d4fff"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/Q"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/imageView6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:src="@mipmap/U" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@mipmap/I_1"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:src="@mipmap/N" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@mipmap/I_2"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/mania" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Hoy"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView7"
        android:src="@mipmap/ayuda"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="?"
        android:textSize="70dp"
        android:gravity="center"
        android:id="@+id/textView4"
        android:background="#fffdff28"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="?"
        android:textSize="70dp"
        android:gravity="center"
        android:id="@+id/textView5"
        android:background="#fffdff28"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/textView8"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="?"
        android:textSize="70dp"
        android:gravity="center"
        android:id="@+id/textView6"
        android:background="#fffdff28"
        android:layout_above="@+id/textView7"
        android:layout_toStartOf="@+id/imageView7"
        android:layout_marginRight="12dp"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="?"
        android:textSize="70dp"
        android:gravity="center"
        android:id="@+id/textView7"
        android:background="#fffdff28"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="?"
        android:textSize="70dp"
        android:gravity="center"
        android:id="@+id/textView8"
        android:background="#fffdff28"
        android:layout_alignTop="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="?"
        android:textSize="70dp"
        android:gravity="center"
        android:id="@+id/textView9"
        android:background="#fffdff28"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/textView6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nueva jugada"
        android:id="@+id/button"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="20dp"
        android:background="#ffaa06ff"
        android:textColor="#ffffffff"
        android:textSize="15dp"
        android:layout_toStartOf="@+id/textView8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:id="@+id/button2"
        android:background="#ffaa06ff"
        android:textColor="#ffffffff"
        android:textSize="15dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignEnd="@+id/textView9"
        android:layout_toEndOf="@+id/textView8" />

</RelativeLayout>
